{
  "compilerOptions": {
    // Output
    "outDir": "./dist/",
    "target": "ES2018",
    "module": "CommonJS",
    // User-code
    "strict": true,
    // Dependencies
    "skipLibCheck": true,
    // Source Maps
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true
  }
}
